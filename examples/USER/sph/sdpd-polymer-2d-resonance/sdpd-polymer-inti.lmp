echo               both
#atom_modify	sort 3.0e-6 3.0e-6
dimension          2
units              si
atom_style   hybrid  bond meso
boundary          p p p

# create simulation box
#2D box
include            2d-vars.lmp
region             box block 0.0000e-3 ${Lx}  0.0000e-3 ${Ly} ${nLz} ${pLz} units box
create_box         2 box

# create fluid particles
lattice            sq ${dx}
create_atoms       1 region box


mass               * ${sdpd_mass}
set                group all meso_rho 1000.0

timestep           0.0e-5
write_restart      poly2d.restart


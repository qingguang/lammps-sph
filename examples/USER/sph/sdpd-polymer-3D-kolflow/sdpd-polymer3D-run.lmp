echo               both
variable           ndim string  3d
dimension          ${ndim}
units              si
atom_style   hybrid  bond meso
boundary          p p p
# create simulation box

#3D box
include            ${ndim}-vars.lmp

region             box block 0.0 ${Lx}  0.0 ${Ly} 0.0 ${Lz} units box
read_data           poly3d.txt

special_bonds   lj 1 1 1
bond_style fene
bond_coeff 1 ${H} ${r0}  0 0


mass               1 ${sdpd_mass}
set                group all meso_rho ${sdpd_rho}


# use Tait's EOS in combination with Morris' laminar viscosity.
# We set rho_0 = 1000 kg/m^3, c = 0.1 m/s, h = 6.5e-5 m.
# The dynamic viscosity is set to 1.0e-3 Pa s, corresponding to a kinematic viscosity of 1.0e-6 m^2/s
pair_style         hybrid/overlay sph/rhosum 1 sdpd
#variable           sdpd_temp index 1e9
pair_coeff         * * sph/rhosum   ${h}
pair_coeff         * *    sdpd ${sdpd_rho} ${sdpd_c} ${sdpd_eta} ${h} ${sdpd_temp}

compute            rho_peratom all meso_rho/atom
compute            sdpd_kin all temp



# do full time integration for shear driver and fluid, but keep walls stationary
fix                integrate_fix_full all meso

#variable            A_kol equal 500
#variable            var_kol atom ${A_kol}*${sdpd_mass}*cos(2*PI*y/${Ly})
#fix                 kol_force all addforce v_var_kol 0.0 0.0

# "profile" corrected temperature
compute         pTemp all temp/profile 1 1 0 y 5

# average velocity
compute vxav all reduce ave vx
variable  vx_cm atom vx-c_vxav
fix av_vx all ave/spatial 1 ${Nfreq} ${Nfreq} &
y center 0.01 v_vx_cm file vx.av ave running units reduced

dump               dump_u all custom 1000 dumpu*.dat id type xu yu zu vx vy vz c_rho_peratom
dump_modify        dump_u first yes
dump_modify        dump_u sort id
dump_modify        dump_u pad 9
dump               dump_id all custom 1000 dump*.dat id type x y z vx vy vz c_rho_peratom
dump_modify        dump_id first yes
dump_modify        dump_id sort id
dump_modify        dump_id pad 9

thermo_style       custom step c_sdpd_kin c_pTemp
thermo_modify      norm no
thermo             100
variable           halfdx equal ${dx}*0.3
dump imgDump all image 1000 image.*.jpg type type atom yes bond atom ${halfdx} adiam 1e-5 view 0 0 zoom 1.3  box yes 0.01
dump_modify        imgDump pad 9

dump imgDump1 all image 1000 image1.*.jpg type type atom no bond atom ${halfdx} adiam 1e-5 view 60 60 zoom 1.3  box yes 0.01
dump_modify        imgDump1 pad 9


neighbor           3.0e-6 bin
neigh_modify       delay 0 every 1

include            settimestep.lmp
variable           newdt   equal  ${dt}*0.1
timestep           ${newdt}
fix 5 all dt/reset 10 NULL ${dt} ${dx} units box

communicate        single vel yes

run 100

#variable            A_kol equal 7100
variable            var_kol atom ${A_kol}*${sdpd_mass}*cos(2*PI*y/${Ly})
fix                 kol_force all addforce v_var_kol 0.0 0.0
#fix 5 all dt/reset 100 1.0e-9 ${dt} ${dx} units box 

run                10000000
